<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.dao.AccountDao">
    <!--模糊查询客户循序-->
    <select parameterType="Map" id="findList" resultType="account">
        select * from account where 1 = 1
        <if test="name != null">
            and name like '%${name}%'
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="realName != null">
            and realName like '%${realName}%'
        </if>
        <if test="idCard != null">
            and idCard like '%${idCard}%'
        </if>
        <if test="mobile != null">
            and mobile like '%${mobile}%'
        </if>
        <if test="offset != null and pageSize != null">
            limit #{offset},#{pageSize}
        </if>
    </select>
    <!-- 根据用户名获取客户信息 -->
    <select id="findByName" parameterType="String" resultType="cn.itcast.pojo.Account">
		select * from account where name = #{value}
	</select>
    <!-- 获取所有客户信息 -->
    <select id="findAll" parameterType="String" resultType="cn.itcast.pojo.Account">
		select * from account
	</select>
    <!-- 获取单个客户信息 -->
    <select id="findById" parameterType="Long" resultType="cn.itcast.pojo.Account">
		select * from account where id = #{value}
	</select>
    <!-- 模糊搜索总条数 -->
    <select id="getTotal" parameterType="Map" resultType="Integer">
        select count(*) from account where 1=1
        <if test="name != null">
            and name like '%${name}%'
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="realName != null">
            and realName like '%${realName}%'
        </if>
        <if test="idCard != null">
            and idCard like '%${idCard}%'
        </if>
        <if test="mobile != null">
            and mobile like '%${mobile}%'
        </if>
    </select>
    <!-- 删除客户信息 -->
    <delete id="delete" parameterType="Long">
        delete  from account where id=#{id}
    </delete>
</mapper>